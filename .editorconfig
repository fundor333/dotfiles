# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
tab_width   = 8
indent_size = 2
indent_style = tab
insert_final_newline = true
charset = utf-8

[*.yml]
indent_style = space
indent_size = 2

[.gitconfig]
indent_style = tab
tab_width   = 8
indent_size = 8

[Makefile]
indent_style = tab
indent_size = 4
