root = true

[*]
end_of_line = lf
tab_width   = 8
indent_size = 2
indent_style = tab
insert_final_newline = true
charset = utf-8

[*.{yml,yaml}]
indent_style = space
indent_size = 8

[Makefile]
indent_style = tab

[{package.json, .travis.yml}]
indent_style = space
indent_size = 2

[{*.py,sslverify,djangocheck,bibliounive,antigravity, nico_script,stipendi,dnschecker,dnslookup}]
indent_style = space
tab_width = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8
max_line_length = 119
